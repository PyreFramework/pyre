# the pyre package testsuite
pyre.pkg.tests.stem := pyre.pkg
pyre.pkg.tests.prerequisites := journal.pkg pyre.pkg


# clean up
tests.pyre.filesystem.local_make.clean := local-make
tests.pyre.filesystem.zip.clean := sample.zip
tests.pyre.primitives.path_resolution.clean := scratch


# special cases
# the following require launch support
tests.pyre.components.component_aliases.argv := --functor.μ=0.10 --gaussian.σ=0.10


# exclusions
# the following are not test drivers
pyre.pkg.tests.drivers.exclude += \
    framework/sample.py \
    framework/sample_syntaxerror.py \

# the following tests fail for known reasons
pyre.pkg.tests.drivers.exclude += \
    config/configurator_locators.py \
    framework/executive_shelves.py \
    framework/linker_codecs.py \

# the following tests need support for prep
pyre.pkg.tests.drivers.exclude += \
    filesystem/zip.py \
    primitives/path_resolution.py \


